{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "allowJs": false,
        "removeComments": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "declaration": true,
        "baseUrl": "local_types",
        "lib": [
            "es5",
            "es2015.promise",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "local_types",
        "types",
        "template",
        "docs"
    ]
}
