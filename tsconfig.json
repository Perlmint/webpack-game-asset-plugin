{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "rootDir": "src",
        "outDir": "dist",
        "allowJs": false,
        "removeComments": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "declaration": true,
        "baseUrl": "local_types",
        "lib": [
            "es5",
            "es2015.promise",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
