{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "allowJs": false,
        "removeComments": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "declaration": true,
        "baseUrl": "../local_types",
        "types": [
            "bluebird-global"
        ],
        "outDir": ".."
    },
    "exclude": [
        "../node_modules",
        "../local_types",
        "../types",
        "../template",
        "../docs",
        "../*.js",
        "../*.d.ts"
    ],
    "include": [
        "./*.ts",
        "../loader.d.ts"
    ]
}
